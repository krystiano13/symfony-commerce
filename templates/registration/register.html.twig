{% extends 'base.html.twig' %}

{% block title %}Rejestracja{% endblock %}

{% block body %}
    <main style="width: 100%; height: 100%; display: flex; justify-content:center; align-items: center;">
        {{ form_start(registrationForm) }}
        <div style="width: 30rem;" class="p-card">
            <div class="p-card-body">
                <div style="display: flex; flex-direction: column; gap: 1rem;" class="p-card-content register-form">
                    <h1>Rejestracja</h1>
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword.first) }}
                    {{ form_row(registrationForm.plainPassword.second) }}
                    <button
                            type="submit"
                            style="cursor: pointer; display: flex; justify-content: center; align-items: center;"
                            class="p-button"
                    >
                        Stw√≥rz nowe konto
                    </button>
                    {{ form_errors(registrationForm) }}
                </div>
            </div>
        </div>
        {{ form_end(registrationForm) }}
    </main>
    <style>
        .register-form {
            div {
                display: flex;
                flex-direction: column;

                label {
                    margin-bottom: 1rem;
                }
            }
        }
    </style>
{% endblock %}
